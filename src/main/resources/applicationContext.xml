</bean>

<bean id="e2" class="com.springtraining.constructorinjection.Employee">  
<constructor-arg value="Saswata"></constructor-arg>  
</bean>

<bean id="e3" class="com.springtraining.constructorinjection.Employee">  
<constructor-arg value="Saswata"></constructor-arg>  
<constructor-arg value="10" type="int"></constructor-arg>
</bean>

<bean id="e4" class="com.springtraining.constructorinjection.Employee">  
<constructor-arg value="Saswata"></constructor-arg>
<constructor-arg value="10" type="int"></constructor-arg>
<constructor-arg value="Bengal"></constructor-arg>
</bean>

<bean id="e5" class="com.springtraining.constructorinjection.Employee">  
<constructor-arg value="Saswata"></constructor-arg>
